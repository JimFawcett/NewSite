<Window x:Class="CodeWebifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Code Webifier" Height="450" Width="800">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <!-- top controls -->
      <RowDefinition Height="*"/>
      <!-- file text -->
      <RowDefinition Height="Auto"/>
      <!-- status -->
    </Grid.RowDefinitions>

    <!-- Top controls: use Grid, not StackPanel -->
    <Grid Grid.Row="0" Margin="0,0,0,8">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <!-- Browse -->
        <ColumnDefinition Width="*"/>
        <!-- FileNameTextBox (stretches) -->
        <ColumnDefinition Width="Auto"/>
        <!-- Webify -->
        <ColumnDefinition Width="Auto"/>
        <!-- Checkbox -->
      </Grid.ColumnDefinitions>

      <Button x:Name="BrowseButton"
              Grid.Column="0"
              Content="Browse"
              Padding="12,6"
              Margin="0,0,8,0"
              Click="BrowseButton_Click"/>

      <TextBox x:Name="FileNameTextBox"
               Grid.Column="1"
               Height="26"
               VerticalAlignment="Center"
               Margin="0,0,8,0"
               HorizontalAlignment="Stretch"/>

      <Button x:Name="WebifyButton"
              Grid.Column="2"
              Content="Webify"
              Padding="12,6"
              Margin="0,0,12,0"
              Click="WebifyButton_Click"/>

      <CheckBox x:Name="LineNumbersCheckBox"
                Grid.Column="3"
                Content="Show line count"
                VerticalAlignment="Center"/>
    </Grid>

    <!-- File content preview -->
    <ScrollViewer Grid.Row="1">
      <TextBlock x:Name="FileTextBlock"
                 FontFamily="Consolas"
                 FontSize="14"
                 TextWrapping="Wrap"/>
    </ScrollViewer>

    <!-- Status / placeholder -->
    <TextBlock Grid.Row="2"
               Foreground="Gray"
               Text="Ready"/>
  </Grid>
</Window>
